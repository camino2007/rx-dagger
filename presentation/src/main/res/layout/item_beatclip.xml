<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/standard_padding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_beatclip_gradient_height"
            android:layout_gravity="top"
            android:background="@drawable/item_beatclip_gradient_top"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_beatclip_gradient_height"
            android:layout_gravity="bottom"
            android:background="@drawable/item_beatclip_gradient_bottom"/>


        <ImageView
            android:id="@+id/item_beatclip_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_beatclip_height"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_beatclip_play_button"
            android:layout_width="@dimen/item_beatclip_thumb_play_button_size"
            android:layout_height="@dimen/item_beatclip_thumb_play_button_size"
            android:background="@color/black_transparent"
            android:layout_gravity="center"
            android:src="@mipmap/ic_play_large"/>

        <TextView
            android:id="@+id/item_beatclip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:background="@color/black_transparent"
            android:padding="@dimen/standard_padding"
            android:text="66:66"
            android:textColor="@color/white"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/standard_padding"
        android:paddingTop="@dimen/standard_padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_beatclip_footer_avatar"
            android:layout_width="@dimen/item_beatclip_footer_avatar_size"
            android:layout_height="@dimen/item_beatclip_footer_avatar_size"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>